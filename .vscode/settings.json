{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "python.analysis.extraPaths": [
    "./python_lambda/layer/resolve_param/python",
    "./python_lambda/notify_discord"
  ],
  "python.defaultInterpreterPath": "python-lambda/.venv/bin/python",
  "python.testing.unittestEnabled": true,
  "pythonIndent.trimLinesWithOnlyWhitespace": false,
  "flake8.args": ["--max-line-length=88"]
}
